
<%= form_tag("/job_applications", method: "get",) do %>
<p>
    <%= label_tag(:q, "job_application_full_name:") %>
    <%= text_field_tag(:q) %>
</P>
<p>
    <%= label_tag(:q, "job_application_phone:") %>
    <%= telephone_field(:applicant, :phone) %>
</P>

<p>
    <%= label_tag(:q, "job_application_hobby:") %>
    <%= text_field_tag(:q) %>
</P>
<p>
    <%= label_tag(:q, "job_application_years_experience:") %>
    <%= number_field(:year, :year, in: 1..20, step: 1) %>
</P>
<p>
    <%= label_tag(:q, "job_application_available_date:") %>
    <%= date_field(:applicant, :available_date) %>
</P>
    <%= submit_tag("Submit") %>
<% end %>
