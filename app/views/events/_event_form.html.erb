<h1>New Events</h1>

<%= link_to 'Show all Events', event_path %>

<%= form_for event do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :date %>
    <%= f.text_field :date %>
  </p>

  <p>
    <%= f.label :capacity %>
    <%= f.text_area :capacity %>
  </p>

  <p>
    <%= f.label :city %>
    <%= f.text_field :city %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>
